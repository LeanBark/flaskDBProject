<html>
<head>
    <title>All Current Menu Items</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../static/css/styles.css"/>
</head>
<header>
    <nav class="navbar fixed-top navbar-expand-lg bg-body-tertiary bg-border-bottom bg-border-body" style="background-color: #0e161a;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navigation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="container-fluid">
                    <div class="navbar-nav">
                        <a class="nav-link" href="/">Search</a>
                        <a class="nav-link" href="/restaurants">Restaurants</a>
                        <a class="nav-link active" aria-current="page" href="/restaurant-menu">Menu Items</a>
                        <a class="nav-link" href="/invoices">Invoices</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
<body>
    <div id="display-all-menu-items">
        <h1>MenuItems Master Table</h1>
        <table id="all-menu-items-table">
            <thead>
                <tr>
                {% for key in item_list[0].keys() %}
                    <th>{{key}}</th>
                {% endfor %}
                </tr>
            </thead>

            <tbody>
                {% for item in item_list %}
                <tr>
                    {% for key in item.keys() %}
                        <td>{{item[key]}}</td>
                    {% endfor %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
