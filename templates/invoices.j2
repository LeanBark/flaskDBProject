<header>
    <a href="/" >Return to Homepage</a>
    <a href="/restaurants">View All Restaurants</a>
    <a href="/restaurant-menu">View All Menu Items</a>
</header>
<body>
    <h1>RestaurantSalesInvoices Master Table</h1>
    <div id="display-all-invoices">
        <table id="all-invoices-table">
            <thead>
                <tr>
                {% for key in invoice_list[0].keys() %}
                    <th>{{key}}</th>
                {% endfor %}
                </tr>
            </thead>

            <tbody>
                {% for invoice in invoice_list %}
                <tr>
                    {% for key in invoice.keys() %}
                        <td>{{invoice[key]}}</td>
                    {% endfor %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>