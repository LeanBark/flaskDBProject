<html>

<head>
    <title>Edit Menu Item</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../static/css/styles.css"/>
</head>

<body>
    <div>
        <h1> {{menu_list[0].Item}} from {{restaurant_name[0].name}}</h1>
        <table id="edit-menu-item-table">
            <thead>
                <tr>
                    {% for key in menu_list[0].keys() %}
                    <th data-value="{{key}}">{{key}}</th>
                    {% endfor %}
                </tr>
            </thead>

            <tbody>
                {% for menu_item in menu_list %}
                <tr>
                    {% for key in menu_item.keys() %}
                    <td>{{menu_item[key]}}</td>
                    {% endfor %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    

    <div id="redirected-edit-menu-item">
        <div class="container">
            <form id="edit-menu-item-form" action="/edit-menu-item/{{menu_list[0].menu_itemID}}" method="post">
                <fieldset class="form-group border p-3">
                    <legend class="float-none w-auto">Edit Restaurant Menu Information</legend>
                    <input type="hidden" id="restaurant" name="restaurant" value="{{menu_list[0].restaurantID}}" required>
                    <div class="row">

                        <div class="col-5">
                            <label for="menu-item-name">Item Name:</label>
                            <input class="form-control" type="text" id="menu-item-name" name="menu-item-name" placeholder="{{menu_list[0].Item}}" required>
                        </div>

                        <div class="col-3">
                            <label for="menu-item-calories">Calorie Amount:</label>
                            <input class="form-control" type="number" id="menu-item-calories" name="menu-item-calories" placeholder="{{menu_list[0].Calories}}" required>
                        </div>

                        <div class="col-4">
                            <label for="menu-item-food-category">Food Category:</label>
                            <select class="form-select" id="menu-item-food-category" name="menu-item-food-category" required>
                                {% for category in food_category %}
                                    {% if category.name == menu_list[0].Category %}
                                    <option value="{{category.food_categoryID}}" selected>{{menu_list[0].Category}}</option>
                                    {% else %}
                                    <option value="{{category.food_categoryID}}">{{category.name}}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class=""d-grid gap-2 d-md-block">
                            <button class="btn btn-success" type="submit" value="Edit Restaurant" name="Edit Restaurant" id="Edit Restaurant">Submit</button>
                            <a type="button" class="btn btn-danger" href="/restaurant-menu/{{menu_list[0].restaurantID}}">Cancel</a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>