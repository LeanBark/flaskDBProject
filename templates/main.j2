<html>
<head>
    <title>Welcome to the Restaurant Query</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../static/css/styles.css"/>

</head>

<header>
    <nav class="navbar fixed-top navbar-expand-lg bg-body-tertiary bg-border-bottom bg-border-body" style="background-color: #0e161a;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navigation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="container-fluid">
                    <div class="navbar-nav">
                        <a class="nav-link active" aria-current="page" href="/">Search</a>
                        <a class="nav-link" href="/restaurants">Restaurants</a>
                        <a class="nav-link" href="/restaurant-menu">Menu Items</a>
                        <a class="nav-link" href="/invoices">Invoices</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>

<body>
    <h1>Welcome To Restaurant Query!</h1>

    <div class="container-fluid">
        <form id="menu-select-form" method="post">
            <fieldset class="form-group border p-3">
                <legend class="float-none w-auto">Search for Menus by Restaurant:</legend>
                <div class="input-group">
                    <select class="form-select" name="selected-restaurant" id="selected-restaurant" required>
                        <option value="">Select A Restaurant</option>
                        {% for restaurant in restaurants %}
                        <option value="{{restaurant.restaurantID}}">{{restaurant.name}}</option>
                        {% endfor %}
                    </select>
                    
                    <button class="btn btn-outline-dark" type="submit" onclick="selectInvoice()" name="View Restaurant Invoices" value="View Restaurant Invoices" id="View Restaurant Invoices">Search By <strong>Invoices</strong></button>
                    <button class="btn btn-outline-dark" type="submit" onclick="selectMenu()" name="View Restaurant Menu" value="View Restaurant Menu" id="View Restaurant Menu">Search By <strong>Menus</strong></button>
                </div>
                    
            </fieldset>
            
        </form>
    </div>
    <script language="JavaScript">
        function selectMenu(){
            let restaurant = document.getElementById("selected-restaurant").value;
            let menuButton = document.getElementById("View Restaurant Menu");
            menuButton.setAttribute("formaction", "/restaurant-menu/" + restaurant);
        } 
            
        function selectInvoice(){
            let restaurant = document.getElementById("selected-restaurant").value;
            let invoiceButton = document.getElementById("View Restaurant Invoices");
            invoiceButton.setAttribute("formaction", "/invoices/" + restaurant);
        }   

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
