<html>
<head>
    <title>All Current Restaurants</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../static/css/styles.css"/>
    <script language="JavaScript">
    document.addEventListener("DOMContentLoaded", () =>{
        document.getElementById("display-restaurants").style.display = "block";
        document.getElementById("add-restaurant-btn").style.display = "block";
        document.getElementById("add-restaurant").style.display = "none";
        document.getElementById("edit-restaurant").style.display = "none";
    });

    function displayController(situation){
        if(situation == "add"){
            document.getElementById("display-restaurants").style.display = "none";
            document.getElementById("add-restaurant-btn").style.display = "none";
            document.getElementById("add-restaurant").style.display = "block";
            document.getElementById("edit-restaurant").style.display = "none";
        }

        else if(situation == "edit"){
            document.getElementById("display-restaurants").style.display = "none";
            document.getElementById("add-restaurant-btn").style.display = "none";
            document.getElementById("add-restaurant").style.display = "none";
            document.getElementById("edit-restaurant").style.display = "block";
        }

        else {
            document.getElementById("display-restaurants").style.display = "block";
            document.getElementById("add-restaurant-btn").style.display = "block";
            document.getElementById("add-restaurant").style.display = "none";
            document.getElementById("edit-restaurant").style.display = "none";
            
        }
    }

    function addRestaurant() {
        displayController('add');
    }

    function editRestaurant() {
        displayController('edit');
    }


    function showEverything() {
        displayController('everything');
    }

    function showRestaurantTable() {
        displayController('');
    }

    </script>
</head>

<header>
    <nav class="navbar fixed-top navbar-expand-lg bg-body-tertiary bg-border-bottom bg-border-body" style="background-color: #0e161a;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navigation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="container-fluid">
                    <div class="navbar-nav">
                        <a class="nav-link" href="/">Search</a>
                        <a class="nav-link active" aria-current="page" href="/restaurants">Restaurants</a>
                        <a class="nav-link" href="/restaurant-menu">Menu Items</a>
                        <a class="nav-link" href="/invoices">Invoices</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>

<body>
    <div class="btn-group">
        <input type="button" value="Add New Restaurant" id="add-restaurant-btn" onClick="addRestaurant()">
    </div>
    <div id="display-restaurants">
        <h1>Restaurants Master Table</h1>
        <table id="restaurants-table">
            <thead>
                <tr>
                {% for key in restaurants[0].keys() %}
                    <th>{{key}}</th>
                {% endfor %}
                <th>Edit</th>
                <th>Delete</th>
                </tr>
            </thead>

            <tbody>
                {% for restaurant in restaurants %}
                <tr>
                    {% for key in restaurant.keys() %}
                        <td>{{restaurant[key]}}</td>
                    {% endfor %}
                    <td><a href="/edit-restaurant/{{restaurant.Id}}"><img src="/static/img/edit-icon.svg" width="39" height="30"></a></td>
                    <td><a href="/delete-restaurant/{{restaurant.Id}}"><img src="/static/img/delete-icon.svg" width="39" height="30"></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div id="add-restaurant">
        <div class="container">
            <form id="add-restaurant-form" action="/restaurants" method="post">
                <fieldset class="form-group border p-3">
                    <legend class="float-none w-auto">Add New Restaurant</legend>
                        <div class="row">
                            <div class="col-4">
                                <label for="restaurant-name">Restaurant</label>
                                <input class="form-control" type="text" name="restaurant-name" id="restaurant-name" placeholder="Enter Restaurant Name">
                            </div>

                            <div class="col-4">
                                <label for="restaurant-address">Address</label>
                                <input class="form-control" type="text" name="restaurant-address" id="restaurant-address" placeholder="Enter Street Address">
                            </div>


                            <div class="col-4">
                                <label for="restaurant-food-category">Food Category</label>
                                <select class="form-select" name="restaurant-food-category" id="restaurant-food-category">
                                    <option value="">Select a Food Category</option>
                                    {% for category in food_category %}
                                    <option value="{{category.food_categoryID}}">{{category.name}}</option>
                                    {% endfor %}
                                </select>
                            </div>
                    </div>
                    <div class="row">
                        <div class="d-grid gap-2 d-md-block">
                            <button class="btn btn-success" type="submit" name="Add Restaurant" value="Add Restaurant" id="Add Restaurant">Add Restaurant</button>
                            <input class="btn btn-danger" type="button" value="Cancel" onclick="showRestaurantTable()">
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

    <div id="edit-restaurant">
        <form id="edit-restaurant-form" action="/edit-restaurant/{{restaurants[0].Id}}" method="post">
            <fieldset>
                <legend>Edit Restaurant Information</legend>
                <input type="hidden" id="restaurant-id" value="{{restaurants[0].Id}}" required> 
                <input type="text" id="restaurant-name" placeholder="{{restaurants[0].name}}" required>
                <input type="text" id="restaurant-address" placeholder="{{restaurants[0].address}}" required>
                <select id="restaurant-food-category" required>
                    {% for category in food_category %}
                        {% if category.food_categoryID == restaurants[0].food_categoryID %}
                        <option value="{{restaurants[0].food_categoryID}}" selected>{{category.name}}</option>
                        {% else %}
                        <option value="{{category.food_categoryID}}">{{category.name}}</option>
                        {% endif %}
                    {% endfor %}
                </select>
                <input type="button" value="Cancel" onclick="showRestaurantTable()">
            </fieldset>
        </form>
    </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
